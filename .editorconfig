root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.cs]
indent_size = 4
insert_final_newline = false

[*.csproj]
indent_size = 2
insert_final_newline = false
max_line_length = unset

[*.sln]
max_line_length = unset

[*.json]
indent_size = 2
insert_final_newline = false
